<div id="wrapper">
    <%= render "shared/navbar" %>
    <div class="content-page">
      <div class="content">
        <div class="container-fluid">
          <div class="container">
      <div class="row justify-content-center">
        <h4 class="mt-4 mb-4 display-4">New Product</h4>
      </div>

      <div class="row justify-content-center">
        <div class="row">
          <div>
          <%= form_with scope: :products, url: products_path, local: true do |form| %>
            
              <div class="form-group">
                <%= form.label :name %>
                  <%= form.text_field :name, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= form.label :image_url %>
                  <%= form.file_field :image_url, class: 'form-control'%>
               </div>

                <div class="form-group">
                <%= form.label :price %>
             
                  <%= form.number_field :price, class: 'form-control' %>
              </div>
              
              <div class="form-group">
                <%= form.label :quantity %>
                  <%= form.text_field :quantity, class: 'form-control' %>
              </div>

               <div class="form-group">
                <%= form.label :category_id %>
                  <%= form.text_field :category_id, class: 'form-control' %>
              </div>

              <div class="form-group pb-2">
                <%= form.label :store_id %>
                  <%= form.text_field :store_id, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= form.submit class:"form-control btn-primary btn-block fa-lg gradient-custom-2 mb-3" %>
              </div>

              <div>
               <a href="/">home page</a> 
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>